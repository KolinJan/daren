.main-img{
    width: 50px;
    max-height: 50px;
}
.main-img-frame{
    position:relative;
    width:100%;
    height:240px;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-img-label-frame{
    width:100%;
    position:absolute;
    bottom:4px;    
    background-color:rgba(0, 0, 0, 0.34);
    left: 0;
}
.main-img-label{
    padding:13px 8px;
    color:#fff;

}
.container-frame{
    padding-bottom: 70px;
    position: relative;
}
.details-frame-details-1{
    padding: 0px 10px;
    border-bottom:1px solid #ccc;
    margin-top: 50px;
    border-top: 1px solid #ccc;
}
.details-frame-details-1-l1{
    color:#ff6537;
}
.details-frame-details-1-l2{
    font-size: 30px;
}
.details-frame-details-1-l3{
    font-size: 15px;
    color: #ccc;
}
.details-frame-details-1-l4{
    color: #fff;
