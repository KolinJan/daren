}
.details-frame-smallicon{
    width: 13px;
    height: 13px;
    padding-right: 8px;
}


/*---------------------基本信息样式-----------------------------*/
.base-details-item{
    padding: 15px 8px;
    border-bottom: 1px solid #ccc;
}
.base-details-item-clear{
    clear: both;
}
.base-details-item-label{
    float: left;
    width: 50%;
}
.base-details-item-input{
    float:left;
    width:100%;
    text-align:right;
}
.base-details-item-input-frame{
    float:left;
    width:50%; 
}
.limit-details-frame{
    margin-top: 50px;
    border-top: 1px solid #ccc;
}
textarea{
    overflow: hidden;
    width: 100%;
    height: 30px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-top: 5px;
    padding: 5px 0px;
    padding-left: 5px;
}
.mytimepicker{
    text-align:right;
    
}
.icon-checkedbox{
    position:absolute;
    right:5px;
