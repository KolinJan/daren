    padding: 5px 15px;
    float: right;
    border-radius: 3px;
    margin-top: 2px;
}
.flex-row{
    display: flex;
    flex-wrap: wrap;
}
.details-frame-details-1-l5{
    color: #8959a8;
    font-size: 13px;
