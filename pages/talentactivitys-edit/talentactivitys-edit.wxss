}

.textarea-enabled{
    display: block;
}
.textareashowtrue{
    display: block;
}
.textareashowfalse{
    display: none;
}

.footer{
    position:absolute;
    bottom: 0;
    display: flex;
    width: 100%;
    overflow:hidden;
    
}
.footer button{
    flex-grow: 1;
    text-align: center;
    color: #fff;
    background: #ff6537;
    border-radius: 0;
}
.preview{
    background-color: #8959a8!important;
}
