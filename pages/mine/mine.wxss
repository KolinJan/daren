/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:50px;
  
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

progress{
  width: 60%;
  /*float: right;*/
  display: inline-block;
  padding-left: 5px;
  margin-bottom:2px;
  
}

.progress-title{
  display:inline-block;

  text-align: center
}
.mine-item-panel{
  margin-bottom:50px;

}
.mine-item{
  padding: 15px 8px;
  border-bottom: 1px solid #f1f1f1;
}
.mine-dicript-view{
  display: inline-block;
  margin-left: 10px;
}
.mine-icon{
  width:25px;
  height:25px;
  vertical-align:bottom;
}

.mine-item:nth-child(1)
{
border-top: 1px solid #f1f1f1;
}
.right{
  float: right;
}
.bonus{
  margin-bottom: 15px;
  border-top: 1px solid #f1f1f1;  
}
.register-frame{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 50px;
    background-color: #F3F1F1;
    margin-bottom:10px;
}
.register-frame view{
  text-align: center;
}
.register-frame-button{
    color:#fff;
    background-color:#FF6537;
    padding:10px 15px;
    border-radius:24px;
    margin-top: 20px;
    text-align: center;
}
.tip-frame{
    text-align: center;
    margin-top: 50px;
    color: #FF6537;
}
.displayHide{
    display: none!important
}
.displayShow{
    display: block!important;
}